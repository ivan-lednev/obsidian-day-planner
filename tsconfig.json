{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "importsNotUsedAsValues": "remove",
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    // TODO: remove once Dataview type imports get fixed
    "noImplicitAny": false,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2019",
      "ES2022",
      "ES2023"
    ],
    "types": [
      "node",
      "svelte",
    ]
  },
  "exclude": [
    "node_modules/*",
    "obsidian-metadata-utils/*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "tests/**/*.ts",
  ]
}
